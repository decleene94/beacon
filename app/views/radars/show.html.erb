<h1>#<%= @radar.id %></h1>
<div id="messages" data-radar-id="<%= @radar.id %>">
  <% @radar.messages.each do |message| %>
    <div class="message-container" id="message-<%= message.id %>">
      <i class="author">
        <span><%= message.user.first_name %></span>
        <small>time</small>
      </i>
      <p><%= message.content %></p>
    </div>
  <% end %>
</div>

<%= simple_form_for [ @radar, @message ], remote: true do |f| %>
  <%= f.input :content, label: false, placeholder: "Message ##{@radar.id}" %>
  <%= f.submit "send" %>

<% end %>
