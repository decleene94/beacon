<div class = "info-window">
  <div class = "info-window first">
    <p><%= "#{radar.user.first_name}'s #{Activity.find(radar.activity_id).name} Beacon"%></p>
    <p><%= radar.description %></p>
  </div>
  <div class = "info-window second">
      <img class="avatar m-2" src=<%= cl_image_path(radar.user.photo.key, width: 150, height: 150, crop: :thumb, gravity: :face) %> />
    <p><%= link_to "Join", radar_path(radar.id), class: "custom-btn custom-btn-sign-up"%></p>
    <h5><%= button_to "Follow", follow_user_path(radar.user.id), method: "POST"  %></h5>
  </div>
</div>
