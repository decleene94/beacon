<%= render 'shared/navbar' %>
<div class="main-container row">
  <nav id='filters' class='filter-ui'></nav>
  <div id="map" class="col-md-12 col-lg-8"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="cards col-md-8 col-lg-4">
    <div class="sort-beacons" style="margin: 8px 0px 0px 10px;">
      <p>Sort by:
        <%= link_to "Newest", radars_path(order: 'time') %>,
        <%= link_to "Distance", radars_path(order: 'distance') %>
      </p>
    </div>
    <%= render @radars %>
  </div>
</div>
