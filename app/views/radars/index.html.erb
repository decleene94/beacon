 <%= render 'shared/navbar' %>
<div class="main-container">
  <div id="map"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="cards">
    <div class="info-window-user-section d-flex justify-content-start">
    <% @radars.each do |radar|  %>
      <div class="info-window-avatar">
        <img class="avatar m-2" src=<%= cl_image_path(radar.user.photo.key, width: 150, height: 150, crop: :thumb, gravity: :face) %> />
      </div>
    <div>
      <p><%= radar.user.first_name.capitalize %></p>
    </div>
    <div>
      <h5><%= button_to "Follow", follow_user_path(radar.user.id), method: "POST", class:"btn btn-sm btn-outline-info"  %></h5>
    </div>
  </div>
  <% end  %>
</div>
