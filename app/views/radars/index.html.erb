<%= render 'shared/navbar' %>
<div class="main-container row">
  <div id="map" class="map col-md-12 col-lg-12 col-xl-8"
    data-markers="<%= @markers.to_json %>"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <div class="cards col-md-8 col-lg-4 col-xl-4">
    <div class="beacon-description">
      <h2>Active Beacons <i class="fas fa-blog blink_icon"></i></h2>
    </div>
    <div class="sort-beacons">
      <p>Sort by:
        <%= link_to "Time to meet", radars_path(order: 'time') %> |
        <%= link_to "Distance", radars_path(order: 'distance') %>
      </p>
    </div>
    <%= render @radars %>
  </div>
</div>
